<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<h1>Dennys Antonika</h1>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="container">
    <% if (messages.success) { %>
    <div class="alert alert-info" role="alert">
        <%= messages.success %>
    </div>
    <% } %>
    <div class="row">
        <div class="col">
            <form action="/kapal/store" method="POST">
                <div class="mb-3">
                    <label for="nama_kapal" class="form-label">Nama Kapal</label>
                    <input type="text" class="form-control" name="nama_kapal" required>
                </div>
                <div class="mb-3">
                    <label for="id_dpi" class="form-label">DPI</label>
                    <select class="form-select" name="id_dpi" required>
                        <% for(var i = 0; i < dpi.length; i++) { %>
                            <option value="<%= dpi[i].id_dpi %>"><%= dpi[i].nama_dpi %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="id_pemilik" class="form-label">Pemilik</label>
                    <select class="form-select" name="id_pemilik" required>
                        <% for(var i = 0; i < pemilik.length; i++) { %>
                            <option value="<%= pemilik[i].id_pemilik %>"><%= pemilik[i].nama_pemilik %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="id_alat_tangkap" class="form-label">Nama Alat Tangkap</label>
                    <select class="form-select" name="id_alat_tangkap" required>
                        <% for(var i = 0; i < alat_tangkap.length; i++) { %>
                            <option value="<%= alat_tangkap[i].id_alat_tangkap %>"><%= alat_tangkap[i].nama_alat_tangkap %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                </div>
            </form>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama Kapal</th>
                        <th scope="col">DPI</th>
                        <th scope="col">Pemilik</th>
                        <th scope="col">Nama Alat Tangkap</th>
                        <th colspan="2" scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < kapal.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= kapal[i].nama_kapal %></td>
                    <td><%= kapal[i].nama_dpi %></td>
                    <td><%= kapal[i].nama_pemilik %></td>
                    <td><%= kapal[i].nama_alat_tangkap %></td>
                    <td>
                        <a href="/kapal/edit/<%= kapal[i].id_kapal %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/kapal/delete/<%= kapal[i].id_kapal %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% } %>
                </tbody>
            </table>
            <a href="/dpi" class="btn btn-sm btn-success">Next</a>
        </div>
    </div>
</div>
</body>
</html>
